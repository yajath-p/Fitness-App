<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:text="Fitness Friend"
        android:textSize="50sp"
        android:textColor="#000000" />

    <TextView
        android:id="@+id/workout_input"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Enter a Workout"
        android:textSize="30sp"
        android:layout_marginBottom="5sp"/>


    <EditText
        android:id="@+id/workout_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_input"
        android:layout_centerHorizontal="true"
        android:hint="Enter the type of your workout"
        android:inputType="text"
        android:layout_marginBottom="5sp"
        />

    <TextView
        android:id="@+id/workout_duration_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_type"
        android:layout_centerHorizontal="true"
        android:text="Duration"
        android:textSize="20sp" />

    <EditText
        android:id="@+id/workout_duration"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_duration_label"
        android:layout_centerHorizontal="true"
        android:hint="Enter the duration in minutes"
        android:inputType="number"
        />

    <TextView
        android:id="@+id/workout_day_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_duration"
        android:layout_centerHorizontal="true"
        android:text="Day"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/workout_day"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_day_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/add_workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/workout_day"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#000000"
        android:text="Add Workout"/>

    <Button
        android:id="@+id/workout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_workout"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="40dp"
        android:backgroundTint="#000000"
        android:text="View Workouts"/>

    <Button
        android:id="@+id/calendar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/add_workout"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:layout_alignParentEnd="true"
        android:layout_marginRight="50dp"
        android:backgroundTint="#000000"
        android:text="Calendar" />

    <TextView
        android:id="@+id/preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/calendar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Set Preferences"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/preferences_rest_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preferences"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Choose a Rest Day"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/preferences_rest"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preferences_rest_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <TextView
        android:id="@+id/preferences_color_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preferences_rest"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:text="Choose a Theme"
        android:textSize="15sp" />

    <Spinner
        android:id="@+id/preferences_color"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preferences_color_label"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/set_preferences"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/preferences_color"
        android:layout_centerHorizontal="true"
        android:backgroundTint="#000000"
        android:text="Set Preferences" />

    <RelativeLayout
        android:id="@+id/ad_view"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/set_preferences"
        android:layout_marginTop="40dp"
        android:layout_centerHorizontal="true"
        android:background="#FDDD" />

</RelativeLayout>